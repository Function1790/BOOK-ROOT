<% layout('layouts/layout') %>
<link rel="stylesheet" href="/css/order.css">

<div class="container">
  <h1>주문 기록</h1>
  
  <% if (orders.length === 0) { %>
    <p>주문 내역이 없습니다.</p>
  <% } else { %>
    <table class="order-table">
      <thead>
        <tr>
          <th>주문 번호</th>
          <th>주문 날짜</th>
          <th>주문 정보</th>
          <th>총 금액</th>
          <th class="last">상세 보기</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.order_id %></td>
            <td><%= new Date(order.created_at).toLocaleDateString() %></td>
            <td><%= order.info %></td>
            <td><%= formatMoney(order.total_price) %>원</td>
            <td class="last">
              <a href="/order/<%= order.order_id %>" class="details-btn">상세 보기</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>
